{
  "name": "Symfony 4 - PHP 7.2",
  "build": { "dockerfile": "Dockerfile", "context": ".." },
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "forwardPorts": [8000],
  "postCreateCommand": "composer install --no-interaction --prefer-dist",
  "postStartCommand": "php bin/console cache:clear || true",
  "extensions": ["felixfbecker.php-debug", "bmewburn.vscode-intelephense-client"],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "remoteUser": "vscode"
}
